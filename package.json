  "bugs": {
    "url": "https://github.com/michaelimmanuel/studybuddy-server/issues"
  },
  "homepage": "https://github.com/michaelimmanuel/studybuddy-server#readme",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "better-auth": "^1.3.14",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/sanitize-html": "^2.16.0",
    "cross-env": "^7.0.3",
    "prisma": "^6.16.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
